{{!-- Social Media Links --}}
<div class="social-media">
  {{!-- Facebook --}}
  <a class="social-link facebook"
     href="{{facebook_url}}" target="_blank" title="Facebook" aria-label="Facebook">
    {{>icon data-name="facebook"}}
    <p>Facebook</p>
  </a>
  {{!-- Twitter --}}
  <a class="social-link twitter"
     href="{{twitter_url}}" target="_blank" title="Twitter"  aria-label="Twitter">
    {{>icon data-name="twitter"}}
    <p>Twitter</p>
  </a>
  {{!-- Instagram --}}
  <a class="social-link instagram"
     href="https://instagram.com" target="_blank" title="Instagram" aria-label="Instagram">
    {{>icon data-name="instagram"}}
    <p>Instagram</p>
  </a>
  {{!-- RSS --}}
  <a class="social-link rss"
     href="/rss" target="_blank" title="RSS" aria-label="RSS">
    {{>icon data-name="rss"}}
    <p>RSS</p>
  </a>
</div>
